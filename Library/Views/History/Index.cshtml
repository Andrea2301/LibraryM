@model IEnumerable<Library.Models.History>

    @{
    ViewData["Title"] = "Historial de Préstamos";
    }

    <div class="container mt-4">
        <h2 class="mb-4">Historial de Préstamos</h2>

        @if (ViewBag.User != null)
    {
        <h5>Historial del usuario: <strong>@ViewBag.User.Name</strong></h5>
    }
    else if (ViewBag.Book != null)
    {
        <h5>Historial del libro: <strong>@ViewBag.Book.Title</strong></h5>
    }

        <div class="card mt-3">
            <div class="card-header bg-secondary text-white">
                Registros recientes
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>Usuario</th>
                            <th>Libro</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                {
                        <tr>
                            <td>@item.User.Name</td>
                            <td>@item.Book.Title</td>
                            <td>@item.DateHistory.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
